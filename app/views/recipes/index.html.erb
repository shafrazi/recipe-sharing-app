<%= render "shared/page_title", title: "Listing all recipes" %>
<% @recipes.each do |recipe| %>
  <div class="row">
    <div class="col-md-2">
      <section class="chef-info text-center">
        <%= gravatar_for(recipe.chef, size: 135) %>
      </section>
    </div>
    <div class="col-md-8 card border-secondary mb-3 bg-light">
      <div class="card-body">
        <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
        <p><%= truncate(recipe.description, length: 150) %></p>
        <p><span class="quiet"><small>Created <%= time_ago_in_words(recipe.created_at) %> ago</small></span></p>
      </div>
    </div>
  </div>
<% end %>
